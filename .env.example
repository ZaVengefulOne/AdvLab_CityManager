# Server Configuration
SERVER_PORT=8080

# JWT Configuration
# ⚠️ ВАЖНО: В продакшене обязательно установите JWT_SECRET!
# Сгенерируйте безопасный ключ: openssl rand -hex 32
JWT_ISSUER=city-manager-service
JWT_AUDIENCE=city-manager-user-app
JWT_REALM=City Manager user realm
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION_TIME=86400

# Database Configuration
# ⚠️ ВАЖНО: В продакшене обязательно установите DATABASE_PASSWORD!
DATABASE_URL=jdbc:postgresql://localhost:5432/vengeful_db
DATABASE_USER=postgres
DATABASE_PASSWORD=your-database-password
DATABASE_DRIVER=org.postgresql.Driver
